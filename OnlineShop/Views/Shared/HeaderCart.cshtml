@model List<OnlineShop.Models.CartItem>

<div class="cart">
    <h3>Chào mừng đến website</h3>
    <p>
         <span>Giỏ hàng:</span><div id="dd" class="wrapper-dropdown-2">
            <span>@Model.Count sản phẩm - @((Model.Sum(x => x.Product.Price * x.Quatity).GetValueOrDefault(0).ToString("N0")))đ</span>
            <ul class="dropdown">
                @if (Model.Count > 0)
                {
                    <li>
                        <a href="/gio-hang" style="color: #337ab7; text-decoration: none;">
                            <table style="width: 215px;">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td><img src="@item.Product.Image" width="40" /></td>
                                        <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quatity).ToString("N0"))đ</td>
                                    </tr>
                                }
                            </table>
                        </a>
                    </li>
                }
                else
                {
                    <li>you have no items in your Shopping cart</li>
                }
            </ul>
        </div>
    </p>
</div>